<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <include
        layout="@layout/app_bar_main" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:src="@drawable/hello_there">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:contentDescription="Organic food"
                android:src="@drawable/organic_food"
                android:background="@drawable/button_selector"
                android:elevation="4dp"
                android:onClick="showOrganicFoodDetails"
                android:layout_weight="1">
            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:contentDescription="Fresh fruit"
                android:src="@drawable/fresh_fruit"
                android:background="@drawable/button_selector"
                android:elevation="4dp"
                android:layout_weight="1">
            </androidx.appcompat.widget.AppCompatImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="152dp"
            android:layout_margin="6dp"
            android:contentDescription="Fresh Dairy Products"
            android:src="@drawable/fresh_dairy_products"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:layout_weight="1">
        </androidx.appcompat.widget.AppCompatImageButton>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="152dp"
            android:layout_margin="6dp"
            android:contentDescription="Meat Products"
            android:src="@drawable/meat_production"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:layout_weight="1">
        </androidx.appcompat.widget.AppCompatImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="6dp"
            android:contentDescription="Poultry products"
            android:src="@drawable/poultry_products"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:layout_weight="1">
        </androidx.appcompat.widget.AppCompatImageButton>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="6dp"
            android:contentDescription="Other Food"
            android:src="@drawable/other_foods"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:layout_weight="1">
        </androidx.appcompat.widget.AppCompatImageButton>
    </LinearLayout>
</LinearLayout>